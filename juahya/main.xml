        android:layout_height="wrap_content" android:orientation="horizontal">
         
        <com.juahya.guis.JLinearlayout  android:background="#61ca23" android:layout_marginRight="3"
            android:layout_width="wrap_content"  android:layout_weight="1" 
		        juahya:attrKey="action_link"   juahya:attrType=""
